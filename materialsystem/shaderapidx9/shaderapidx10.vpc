	}

	$Folder	"Link Libraries"
	{
		$DynamicFile	"$SRCDIR\lib\public\tier2.lib"
		$DynamicFile	"$SRCDIR\lib\public\bitmap.lib"
		$DynamicFile	"$SRCDIR\lib\public\mathlib.lib"
