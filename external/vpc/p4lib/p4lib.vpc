$Include "$SRCDIR\vpc_scripts\source_dll_base.vpc"

$Configuration
{
	$Compiler
	{
		$AdditionalIncludeDirectories		"$BASE,$SRCDIR\common\p4api"
	}

	$Linker
	{
		$AdditionalDependencies				"$BASE wsock32.lib"
	}
}

$Project "P4lib"
{
