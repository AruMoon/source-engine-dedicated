	{
		$File	"p4.cpp"
	}

	$Folder	"Header Files"
	{
		$File	"$SRCDIR/public/p4lib/ip4.h"
	}

	$Folder "Link Libraries"
	{
		$File	"$SRCDIR/lib/common/libclient.lib"
		$File	"$SRCDIR/lib/common/librpc.lib"
